# ====================================
# RAG Application Configuration
# ====================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ====================================
# Application Settings
# ====================================
APP_NAME=rag_app
APP_VERSION=0.1.0

# ====================================
# Backend Selection
# ====================================
# Options: "openai" or "ollama"
LLM_BACKEND=openai
EMBEDDING_BACKEND=openai

# ====================================
# OpenAI Configuration
# ====================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_RERANKER_MODEL=gpt-4o
OPENAI_TIMEOUT=120

# ====================================
# Ollama Configuration
# ====================================
# For Docker: use service name "http://ollama:11434"
# For local: use "http://localhost:11434"
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_RERANKER_MODEL=llama3.2:latest
OLLAMA_TIMEOUT=120

# ====================================
# Retrieval Settings
# ====================================
RETRIEVAL_TOP_K=20
RETRIEVAL_RERANK_TOP_M=5
RETRIEVAL_CHUNK_SIZE=1000
RETRIEVAL_CHUNK_OVERLAP=200

# ====================================
# Embedding Settings
# ====================================
# For OpenAI: text-embedding-ada-002 (1536 dims)
# For Ollama: nomic-embed-text (768 dims)
EMBEDDING_MODEL_NAME=text-embedding-ada-002
EMBEDDING_BATCH_SIZE=64
EMBEDDING_DIMENSIONS=1536

# ====================================
# Database Configuration
# ====================================
# For Docker: postgresql://postgres:password@postgres:5432/rag_db
# For local: postgresql://postgres:password@localhost:5432/rag_db
DATABASE_URL=

# Vector table name (use different tables for different embedding backends)
# For OpenAI (1536 dims): chunk_embeddings
# For Ollama (768 dims): chunk_embeddings_ollama
PGVECTOR_TABLE=chunk_embeddings

# ====================================
# Observability (Phoenix)
# ====================================
# For Docker: http://phoenix:6006
# For local: http://localhost:6006
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006
PHOENIX_BASE_URL=http://localhost:6006
ENABLE_COST_TRACKING=true
ENABLE_PROMPT_TRACKING=true

# ====================================
# Logging
# ====================================
LOG_LEVEL=INFO

# ====================================
# Data Paths
# ====================================
DATA_RAW_DOCS=data/raw_docs
DATA_PROCESSED_DOCS=data/processed_docs
DATA_PROCESSED_CHUNKS=data/processed_chunks
DATA_CHUNKS=data/chunks

